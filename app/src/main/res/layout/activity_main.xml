<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Location-Based Telegram Messenger"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Telegram Configuration -->
        <TextView
            android:id="@+id/tv_telegram_config"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Telegram Configuration"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_title" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_bot_token"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Bot Token (123456789:ABC...)"
            app:helperText="Get from @BotFather on Telegram"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_telegram_config">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_bot_token"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_chat_id"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Chat ID (@username or 123456789)"
            app:helperText="Your Telegram username or numeric chat ID"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/til_bot_token">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_chat_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_message"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Message to Send"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/til_chat_id">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:lines="3"
                android:maxLines="5" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Destination Configuration -->
        <TextView
            android:id="@+id/tv_destination_config"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Destination Configuration"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/til_message" />

        <Button
            android:id="@+id/btn_select_destination"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Select Destination on Map"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_destination_config" />

        <TextView
            android:id="@+id/tv_selected_location"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="No destination selected"
            android:textSize="14sp"
            android:gravity="center"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btn_select_destination" />

        <!-- Radius Configuration -->
        <TextView
            android:id="@+id/tv_radius_config"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Detection Radius"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_selected_location" />

        <com.google.android.material.slider.Slider
            android:id="@+id/slider_radius"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:valueFrom="50"
            android:valueTo="1000"
            android:value="200"
            android:stepSize="50"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_radius_config" />

        <TextView
            android:id="@+id/tv_radius_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="200 meters"
            android:gravity="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/slider_radius" />

        <!-- Status and Controls -->
        <TextView
            android:id="@+id/tv_status"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Status: Inactive"
            android:textSize="16sp"
            android:gravity="center"
            android:layout_marginTop="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_radius_value" />

        <Button
            android:id="@+id/btn_start_tracking"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Start Tracking"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@id/btn_stop_tracking"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_status" />

        <Button
            android:id="@+id/btn_stop_tracking"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Stop Tracking"
            android:layout_marginTop="16dp"
            android:layout_marginStart="8dp"
            android:enabled="false"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/btn_start_tracking"
            app:layout_constraintTop_toBottomOf="@id/tv_status" />

        <Button
            android:id="@+id/btn_test_telegram"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Test Telegram Message"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btn_start_tracking" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>
